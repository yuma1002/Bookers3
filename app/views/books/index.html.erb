<% if @book.errors %>
   <ul>
<% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
       <% end %>
        </ul>
      <% end %>



 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
   <h2>User info</h2>
   
   <%= image_tag @user, size: "200x200" %>
   <%#= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
   <h5>name</h5>
   <%= @user.name %>
   <h5>introduction</h5>
   <%= @user.introduction %>
   <div class="row">
    <%= link_to edit_user_path(@user.id) do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
  </div>
    
    
    
    
   <%= form_for(@book,  url: books_path) do |f| %>
    <h2 class="mt-3">New book</h2>
    <h4>Title</h4>
    <%= f.text_field :title,class: "col-xs-12" %>
    
    <h4>Opinion</h4>
     <%= f.text_field :body,class: "col-xs-12" %>
    <nav>
    <%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>
    </nav>
    <% end %>
   
   
    
  </div>
  
  
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
      	
      <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
      </tr>
      
      
      <% @books.each do |book| %>
      <tr>
      <td><%= link_to user_path(book.user_id) do %>
      <%= image_tag @user, size: "200x200" %>
      <%#= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %></td>
      <% end %>
      
      <td><%=link_to book.title, book_path(book.id)%></td>
      <td><%=link_to book.body %></td>
      </tr>
      <% end %>
      </table>
    </div>
     </div>
      </div>
       </div>
</div>


<footer>
  <div class="container mt-5"></div>
  <p class="footer-text">CopyRight Infratop.inc</p>
</footer>

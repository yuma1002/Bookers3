  <div class="row">
    <div class="col-md-3">
    <h2>User info</h2>
  <%= image_tag @user, size: "200x200" %>
  <%#= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
  
    <%# if book.user.attached? %>
    <%#= image_tag @book.user, size: "200x200" %>
  <%# else %>
    <%#= image_tag 'no_image', size: "200x200" %>
  <% #end %>
  
  <h5>name</h5>
  <%= @user.name %>
  <h5>introduction</h5>
  <%= @user.introduction %>
  <div class="row">
  <%= link_to edit_user_path(@user.id) do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
  <%#= link_to"E",edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
</div>
  
  
  <%= form_for(@book,  url: books_path) do |f| %>
  
  
        <h2>New book</h2>
        <h4>Title</h4>
        <%= f.text_field :title,class: "col-xs-12" %>
        
        <h4>Opinion</h4>
        <%= f.text_field :body,class: "col-xs-12" %>
        <nav>
            
        <%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>
        </nav>
        <% end %>
  </div>
  
  
  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class='table'>
        
    <% @users.each do |user| %>
    <tr>
    <td><%= image_tag @user, size: "200x200" %>
      <%#= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %></td>
   <th><%= user.name %><th>
   <th><%= link_to"Show",user_path(user.id) %></th>
   </tr>
   <% end %>
   </table>
  </div>
   </div>
    </div>
     </div>
  
  </div>
  
  <footer>
  <div class="container mt-5"></div>
